@foreach (var alert in _alerts)
{
    <div>
        <div class="@alert.HtmlClass" style="position:fixed; z-index:@alert.ZIndex; @CalcAlertPosition(alert)" role="alert">
            @alert.Text
            &nbsp;
            <button type="button" class="close" data-dismiss="alert" aria-label="Close" @onclick="(e=> OnCloseClick(e, alert))">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>

}
