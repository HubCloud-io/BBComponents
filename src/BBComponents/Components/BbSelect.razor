@typeparam TValue

<select id="@Id"
        name="@Name"
        class="bb-select @HtmlClass"
        style="@HtmlStyle"
        readonly=@IsReadOnly
        disabled=@IsDisabled
        data-toggle="tooltip"
        title="@Tooltip"
        placeholder="@Placeholder"
        value="@_value"
        @onchange="(e => OnValueChanged(e))">

    @foreach (var item in _source)
    {
        <option value="@item.Item1">@item.Item2</option>
    }

</select>
