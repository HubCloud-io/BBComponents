
<textarea id="@Id" 
          class="bb-text-area @HtmlClass" 
          style="@HtmlStyle" 
          readonly=@IsReadOnly 
          disabled=@IsDisabled 
          data-toggle="tooltip" 
          title="@Tooltip" 
          placeholder="@Placeholder"
          rows="@Rows"
          value="@_value" 
          @onchange="(e => OnValueChanged(e))"></textarea>