@page "/CollapsibleGroup"
@using BlazorServerSideForDebug.Data
<h3>Collapsible group</h3>


<div class="row">

    <div class="col-sm-6">
        
        <CollapsibleGroup TValue="Currency" Title="Currency" DataItem="_currency">

            <div class="form-group">
                <label>Code</label>
                <BbTextInput HtmlClass="form-control form-control-sm" @bind-Value="@_currency.Code"></BbTextInput>
            </div>

            <div class="form-group">
                <label>Title</label>
                <BbTextInput HtmlClass="form-control form-control-sm" @bind-Value="@_currency.Title"></BbTextInput>
            </div>


        </CollapsibleGroup>

    </div>
   

</div>